{
  "cliOpts": {
    "template": {
      "options": ["frontend", "backend", "mobile", "web", "native", "bin"],
      "default": "web"
    },
    "project": {
      "default": "project-template"
    },
    "install": {
      "options": ["true", "false"],
      "default": "true"
    },
    "git": {
      "options": ["true", "false"],
      "default": "false"
    },
    "interactive": {
      "default": "false"
    }
  },
  "replaceInFile": ["project"],
  "ignoreFolders": ["node_modules", "coverage", "dist", "lib", "build"],
  "templateAlias": {
    "web": ["frontend", "backend"],
    "native": ["mobile", "backend"]
  }
}
