{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "main": "lib/index.js",
  "scripts": {
    "start": "yarn build:watch & yarn serve",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "yarn build && firebase emulators:start --only functions",
    "shell": "yarn build && firebase functions:shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "ci": "yarn lint && yarn test:coverage",
    "bundle": "yarn bundle:stats && yarn bundle:view",
    "bundle:stats": "react-scripts build --stats",
    "bundle:view": "webpack-bundle-analyzer --mode static --report build/bundle-stats.html build/bundle-stats.json",
    "test": "yarn jest",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "test:coverage:view": "yarn test:coverage --watchAll=false && yarn opener ./coverage/lcov-report/index.html",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "lint": "yarn tsc && yarn eslint",
    "tsc": "tsc --noemit",
    "eslint": "eslint --ignore-path ../.gitignore --ext ts,tsx -c ./.eslintrc.js",
    "eslint:check": "yarn eslint src/",
    "eslint:fix": "yarn eslint --fix src/",
    "format": "prettier './src/**'",
    "format:fix": "prettier --write './src/**'"
  },
  "author": "Christopher Ouellette",
  "license": "MIT",
  "devDependencies": {
    "firebase-functions-test": "^2.1.0"
  },
  "jest": {
    "displayName": "backend",
    "testEnvironment": "jest-environment-node",
    "preset": "ts-jest",
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.{js,ts}",
      "!**/node_modules/",
      "!**/lib/",
      "!**/*.d.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 90,
        "branches": 90,
        "functions": 90,
        "lines": 90
      }
    }
  }
}
