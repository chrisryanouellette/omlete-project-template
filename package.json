{
  "name": "@ouellettec/omlette-project-template",
  "version": "0.1.0",
  "description": "",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "author": "Christopher Ouellette",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/chrisryanouellette/omlette-project-template"
  },
  "scripts": {
    "develop": "yarn develop:watch & yarn develop:debug",
    "develop:watch": "tsc --watch",
    "develop:debug": "nodemon --watch ./dist --inspect-brk ./dist/index.js",
    "build": "yarn lint && yarn build:code",
    "build:code": "tsc --project ./tsconfig.prod.json",
    "deploy": "yarn build:code && yarn deploy:check && yarn deploy:code",
    "deploy:check": "yarn lint && yarn test:coverage",
    "deploy:code": "npm publish",
    "deploy:test": "npm pack",
    "run:code": "node ./dist/index.js",
    "lint": "yarn tsc && yarn eslint:check",
    "tsc": "tsc --noemit",
    "eslint": "eslint --ignore-path .gitignore --ext ts -c ./bin/.eslintrc.js",
    "eslint:check": "yarn eslint --fix-dry-run bin/",
    "eslint:fix": "yarn eslint --fix bin/",
    "format": "prettier './bin/**'",
    "format:write": "prettier --write './bin/**'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "yarn test --coverage",
    "test:coverage:view": "yarn test:coverage --watchAll=false && yarn opener ./coverage/lcov-report/index.html",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "jest": "^28.1.0",
    "jest-watch-typeahead": "^1.1.0",
    "nodemon": "^2.0.18",
    "opener": "^1.5.2",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.5",
    "typescript": "^4.6.4"
  }
}
